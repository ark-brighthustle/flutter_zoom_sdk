<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <shape>
            <solid android:color="@color/zm_transparent"/>
            <stroke android:color="@color/zm_v2_blue_text_color" android:width="1dp"/>
            <padding android:bottom="8dp" android:right="8dp" android:top="8dp" android:left="8dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" >
        <shape>
            <solid android:color="@color/zm_transparent"/>
            <stroke android:color="@color/zm_v2_cell_divider" android:width="1dp"/>
            <padding android:bottom="8dp" android:right="8dp" android:top="8dp" android:left="8dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/zm_highlight_disabled"/>
            <padding android:bottom="8dp" android:right="8dp" android:top="8dp" android:left="8dp"/>
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="@color/zm_transparent"/>
            <stroke android:color="@color/zm_v2_cell_divider" android:width="1dp"/>
            <padding android:bottom="8dp" android:right="8dp" android:top="8dp" android:left="8dp"/>
        </shape>
    </item>
</selector>
