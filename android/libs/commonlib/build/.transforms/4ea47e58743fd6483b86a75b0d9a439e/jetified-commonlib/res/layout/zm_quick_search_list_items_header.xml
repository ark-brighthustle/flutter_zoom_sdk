<?xml version="1.0" encoding="utf-8"?>
<!--
  Set focusable and clickable to true to disable this item can also have dividers visible.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:focusable="true"
    android:gravity="center_vertical"
    android:background="@drawable/zm_quick_search_list_group_header_bg"
    android:clickable="true">

    <ImageView
        android:id="@+id/starredIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/zm_mm_starred_list_head_icon"
        android:visibility="gone"
        />
  
    <TextView
        android:id="@+id/txtHeader"
        style="@style/ZMTextView.Large.Dimmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="A" />

</LinearLayout>